{
  "name": "perf-observer-js",
  "version": "1.0.0",
  "description": "A lightweight JavaScript library for comprehensive web performance observability",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nithin-murali-arch/perf-observer-js.git"
  },
  "keywords": [
    "observability",
    "performance",
    "monitoring",
    "metrics",
    "rum",
    "apm",
    "web-performance",
    "performance-observer",
    "xhr",
    "fetch",
    "headers"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nithin-murali-arch/perf-observer-js/issues"
  },
  "homepage": "https://github.com/nithin-murali-arch/perf-observer-js#readme",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "jest": "^29.5.0",
    "lint-staged": "^15.5.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run build"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "setupFiles": [
      "<rootDir>/tests/setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  }
}
