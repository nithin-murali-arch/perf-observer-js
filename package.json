{
  "name": "perf-observer-js",
  "version": "1.0.0",
  "description": "Performance monitoring solution with PerformanceObserver, XHR/fetch integration, and hook system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nithin-murali-arch/perf-observer-js.git"
  },
  "keywords": [
    "performance",
    "monitoring",
    "observer",
    "xhr",
    "fetch",
    "metrics",
    "web-performance"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nithin-murali-arch/perf-observer-js/issues"
  },
  "homepage": "https://github.com/nithin-murali-arch/perf-observer-js#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.ts"],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov"]
  }
}
