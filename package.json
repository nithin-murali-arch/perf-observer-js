{
  "name": "perf-observer-js",
  "version": "2.1.0",
  "description": "A library for monitoring performance metrics using Service Workers",
  "main": "dist/PerformanceMonitor.js",
  "types": "dist/PerformanceMonitor.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest --silent",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "performance",
    "monitoring",
    "service-worker",
    "metrics"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.ts",
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "public/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ],
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "presets": [
            "@babel/preset-env"
          ]
        }
      ]
    },
    "testEnvironmentOptions": {
      "url": "http://localhost"
    },
    "verbose": true
  }
}
